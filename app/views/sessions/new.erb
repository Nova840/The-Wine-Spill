<h2>Sign In</h2>
<h4>Came for a refill?</h4>

<div id="login-form">

  <%if @errors%>
    <%= erb :'_errors'%>
  <%end%>

  <table class="table">
    <form action="/login" method="POST">
      <tbody>
        <tr>
          <td><input type="text" name="email" placeholder="Email" ></td>
        </tr>
        <tr>
          <td><input type="password" name="password" placeholder="Password" ></td>
        </tr>
        <tr>
          <td><input type="submit" value="Sign In!"></td>
        </tr>
      </tbody>
    </form>
  </table>

</div>
